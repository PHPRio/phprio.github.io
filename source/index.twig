---
layout: main
title: Home
generator: pagination
pagination:
    max_per_page: 1
use: [posts]
---

<!-- Banner de apresentação -->
<section id="banner" class="random-bg">
    <div class="inner">
        <img src="/images/logo.png" alt="Logo do PHPRio" class="logo"/>
        <h2>{{ site.title }}</h2>
        <p>{{ site.subtitle }}</p>
        <ul class="actions">
            <li><a href="#canais" class="button special">Veja como participar</a></li>
        </ul>
    </div>
</section>

<!-- Último post -->
<section id="one" class="wrapper style1">
    <div class="inner">
        {% set post = page.pagination.items|first %}
        <article>
            <header>
                <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
                <time>{{ post.date|date('d/m/Y') }}</time>
            </header>

            <div>{{ post.blocks.content|raw }}</div>

            {% if post.tags %}
                <p class="tags">
                    Tags:
                    {% for tag in post.tags %}
                        {% set tag_slug = tag|url_encode(true) %}
                        <a href="/news/tags/{{ tag_slug }}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            {% endif %}
        </article>
    </div>
</section>

